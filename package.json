{
  "name": "local-iso-logger",
  "version": "1.0.1",
  "description": "Simple logger with local timestamps in ISO8601 format, and clean stack traces on errors",
  "keywords": [
    "log",
    "logger",
    "logging",
    "timestamp"
  ],
  "homepage": "https://github.com/dandv/local-iso-logger#readme",
  "bugs": {
    "url": "https://github.com/dandv/local-iso-logger/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dandv/local-iso-logger.git"
  },
  "license": "MIT",
  "author": {
    "name": "Dan Dascalescu",
    "url": "https://github.com/dandv"
  },
  "type": "commonjs",
  "main": "index.js",
  "files": [
    "index.*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm index.js index.mjs",
    "lint": "eslint index*.ts",
    "prepublish:esm": "tsc index.ts -t ES2015 --types node --moduleResolution node && mv index.js index.mjs",
    "prepublish:cjs": "tsc index.ts --removeComments",
    "prepublish": "npm run prepublish:esm; npm run prepublish:cjs",
    "test": "jest"
  },
  "dependencies": {
    "clean-stack": "^3.0.0",
    "local-iso-dt": "^3.0.2",
    "serialize-error": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-plugin-jest": "^24.0.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "comments": {
    "scripts": {
      "prepublish:esm": "TypeScript can't generate .mjs output directly (https://github.com/microsoft/TypeScript/issues/18442) and --outFile doesn't work with ES Modules"
    }
  }
}
